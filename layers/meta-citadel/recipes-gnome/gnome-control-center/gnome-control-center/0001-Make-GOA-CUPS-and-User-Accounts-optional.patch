   /* find png and jpeg files */
   if (!content_type)
@@ -520,13 +530,16 @@ add_single_file (BgPicturesSource     *bg_source,
 
  read_file:
 
+#ifdef WITH_GOA
   media = g_object_get_data (G_OBJECT (file), "grl-media");
   if (media == NULL)
     {
